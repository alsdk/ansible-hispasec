---
  - name: Extract OpenVPN configuration and keys
    unarchive:
      remote_src: no
      src: "/home/msalinas/ansible/templates/openvpn/clients/{{ inventory_hostname }}.tar.gz"
      dest: /etc/openvpn
      owner: root
      group: root
      mode: 0600
    tags: vpn_client

  - name: Enable OpenVPN client service on boot
    service:
      name: "openvpn@{{ inventory_hostname }}"
      state: restarted
      enabled: yes
    tags: vpn_client

  - name: Install iptables-persistent if needed on {{ inventory_hostname }}
    apt: 
      name: iptables-persistent
      state: present
    tags: vpn_client 

  - name: Uploading iptables rules for {{ inventory_hostname }}
    template:
      src: /home/msalinas/ansible/templates/iptables/rules.v4
      dest: /etc/iptables/rules.v4
    tags: vpn_client

  - name: Loading iptables rules for {{ inventory_hostname }}
    shell: "iptables-restore /etc/iptables/rules.v4"
    tags: vpn_client

  - name: Upload iproute commands (do not route packets over VPN when connecting via public ip)
    template:
      src: /home/msalinas/ansible/templates/iptables/openvpn-iproute.sh
      dest: /etc/openvpn/openvpn-iproute.sh
      mode: 0755
    tags: vpn_client

  - name: Load iproute commands
    shell: "sh /etc/openvpn/openvpn-iproute.sh"
    tags: vpn_client

  - name: Restart OpenVPN client in {{ inventory_hostname }}
    service:
      name: "openvpn@{{ inventory_hostname }}"
      state: restarted
      enabled: yes
    tags: vpn_client

